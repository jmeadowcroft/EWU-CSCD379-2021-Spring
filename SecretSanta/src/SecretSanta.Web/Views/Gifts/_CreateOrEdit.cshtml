@model GiftViewModel

<section class="mb-6">
<div asp-validation-summary='All'></div>
<div class="flex mb-6">
    <div class="flex w-1/2">
        <div class="w-1/3">
            <label class="text-gray-500 font-bold text-right" asp-for="Title"></label>
        </div>
        <div class="w-2/3">
            <input class="focus:outline-none focus:ring-transparent focus:border-indigo-600" type="text" asp-for="Title" />
        </div>
    </div>
    <div class="flex w-1/2">
        <div class="w-1/3">
            <label class="text-gray-500 font-bold text-right" asp-for="Description"></label>
        </div>
        <div class="w-2/3">
            <input type="text" asp-for="Description" />
        </div>
    </div>
    <div class="flex w-1/2">
        <div class="w-1/3">
            <label class="text-gray-500 font-bold text-right" asp-for="Url"></label>
        </div>
        <div class="w-2/3">
            <input type="text" asp-for="Url" />
        </div>
    </div>
    <div class="flex w-1/2">
        <div class="w-1/3">
            <label class="text-gray-500 font-bold text-right" asp-for="Priority"></label>
        </div>
        <div class="w-2/3">
            <input type="number" asp-for="Priority" />
        </div>
    </div>
</div>
<div class="grid grid-cols-4">
    <div>
        <label asp-for="UserId"></label>
        <select asp-for="UserId" asp-items="@(new SelectList(MockData.Users, "Id", "FirstName", "LastName"))">
            <option>Please select one</option>
        </select>
    </div>
</div>
</section>