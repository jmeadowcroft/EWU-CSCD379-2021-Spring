<div asp-validation-summary='All'>
    <div class="flex flex-wrap m-3">
        <div class="field">
            <div class="w-1/6">
                <label class="input-label" asp-for="FirstName"></label>
            </div>
            <div class="w-4/6">
            <input class="input-box" type="text" asp-for="FirstName" />
