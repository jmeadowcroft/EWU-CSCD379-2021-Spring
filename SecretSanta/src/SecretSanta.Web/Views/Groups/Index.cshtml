@model List<GroupViewModel>

@{int counter = 0;}
<section class="flex flex-wrap">
@foreach(var groupViewModel in Model) {
    <div class="w-full lg:w-1/2 xl:w-1/3">
        <section class="item">
            <div class="item-title"> @groupViewModel.Name </div> <a  class="edit-btn" asp-action="Edit" asp-route-id=@counter>Edit</a>
            <form class="inline-block float-right" asp-action="Delete" asp-route-id=@counter method="post"><button class="delete-btn" onclick="return confirm('You are about to delete @groupViewModel.Name. Are you sure you want to do this?')"><i class="fas fa-trash"></i></button></form>
            @{counter++;}
        </section>
    </div>
}
</section>

<a class="index-btn" asp-controller="Groups" asp-action="Create">Create</a>
