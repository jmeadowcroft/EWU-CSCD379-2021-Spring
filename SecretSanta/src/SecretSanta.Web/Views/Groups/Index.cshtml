@model List<GroupViewModel>

@{int counter = 0;}

<section class="grid grid-cols-2">
    @foreach(var group in Model) {
        <section class="border-gray-500 border-2 p-6 m-5 rounded-lg">
            @group.Name <a asp-controller="Groups" asp-action="Edit" asp-route-id=@counter>Edit</a>
            <form asp-controller="Groups" asp-action="Delete" asp-route-id=@counter method="post"><button>X</button></form>
            @{counter++;}
        </section>
    }
</section>

