@model EventViewModel

<section class="mb-6">
<div asp-validation-summary='All'></div>
<div class="flex mb-6">
    <div class="flex w-1/2">
        <div class="w-1/3">
            <label class="text-gray-500 font-bold text-right" asp-for="Title"></label>
        </div>
        <div class="w-2/3">
            <input class="focus:outline-none focus:ring-transparent focus:border-indigo-600" type="text" asp-for="Title" />
        </div>
    </div>
    <div class="flex w-1/2">
        <div class="w-1/3">
            <label class="text-gray-500 font-bold text-right" asp-for="Description"></label>
        </div>
        <div class="w-2/3">
            <input type="text" asp-for="Description" />
        </div>
    </div>
</div>
<div>
    <label asp-for="Date" class="text-gray-500 font-bold mb-1 pr-4"></label>: <input type="text" class="border-indigo-300 border" asp-for="Date" />
</div>
<div class="grid grid-cols-2">
    <div>
        <label asp-for="Location" class="text-gray-500 font-bold text-right"></label>
        <input type="text" class="w-full border-b-2" asp-for="Location" />
    </div>
    <div>
        <label asp-for="SpeakerId"></label>
        <select asp-for="SpeakerId" asp-items="@(new SelectList(MockData.Speakers, "Id", "FullName"))">
            <option>Please select one</option>
        </select>
    </div>
</div>
</section>